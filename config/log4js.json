{
  "appenders": [
    {
      "type": "logLevelFilter",
      "level": "ALL",
      "appender": {
        "type": "console"
      }
    },
    {
      "type": "file",
      "filename": "logs/app.log",
      "maxLogSize": 10485760,
      "numBackups": 3
    },
    {
      "type": "logLevelFilter",
      "level": "ERROR",
      "appender": {
        "type": "file",
        "filename": "logs/errors.log"
      }
    }
  ]
}